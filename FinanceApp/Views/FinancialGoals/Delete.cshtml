@model FinanceApp.Models.FinancialGoal
@{
    ViewData["Title"] = "Delete Financial Goal";
}

<h2>@ViewData["Title"]</h2>

<div class="alert alert-danger">
    Are you sure you want to delete this financial goal?

</div>
<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>
        <dt class="col-sm-2">Target Amount</dt>
        <dd class="col-sm-10">@Model.TargetAmount</dd>
        <dt class="col-sm-2">End Date</dt>
        <dd class="col-sm-10">@Model.EndDate.ToShortDateString()</dd>
    </dl>
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

