@model FinanceApp.Models.FinancialGoal
@{
    ViewData["Title"] = "Edit Financial Goal";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Title">Name</label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="TargetAmount">Target Amount</label>
        <input asp-for="TargetAmount" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EndDate">Target Date</label>
        <input asp-for="EndDate" class="form-control" type="date" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

