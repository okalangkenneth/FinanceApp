@model FinanceApp.Models.ViewModels.TransactionsReportViewModel
@using FinanceApp.Helpers

@{
    ViewData["Title"] = "Transactions";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Transaction</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Description</th>
            <th>Type</th>
            <th>Category</th>
            <th>Formatted Amount</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Transactions)
        {
        <tr>
            <td>@item.Date.ToShortDateString()</td>
            <td>@item.Description</td>
            <td>@item.SubType</td>
            <td>@item.Category</td>
            <td>@CurrencyHelper.FormatAmount(item.Amount, item.Currency.ToString())</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>

