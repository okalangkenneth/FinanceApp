@{
    ViewData["Title"] = "Home";
}

<div class="container">
    <div class="jumbotron mt-4">
        <h1 class="display-4">Welcome to FinTrak!</h1>
        <p class="lead">Take control of your finances and achieve your financial goals with our AI-powered personal finance app.</p>
        <hr class="my-4">
        <p>Sign up or log in to start managing your finances today.</p>
        <a class="btn btn-primary btn-lg" href="/Identity/Account/Register"
           role="button">Sign Up</a>
        <a class="btn btn-secondary btn-lg ml-2" href="/Identity/Account/Login" role="button">Log In</a>
    </div>
    <!-- Add a row with images related to personal finance -->
    <div class="row mt-5">
        <div class="col-md-4">
            <img src="https://source.unsplash.com/random/600x400?finance,save" alt="Personal finance image" class="img-fluid rounded">
        </div>
        <div class="col-md-4">
            <img src="https://source.unsplash.com/random/600x400?budget,invest" alt="Budgeting image" class="img-fluid rounded">
        </div>
        <div class="col-md-4">
            <img src="https://source.unsplash.com/random/600x400?money,goals" alt="Financial goals image" class="img-fluid rounded">
        </div>
    </div>
</div>